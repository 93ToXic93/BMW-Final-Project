@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="login-Main-Container container-fluid">
    <div class="login-box">
        <h2>Log In</h2>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="user-box">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" required="true">
                <label asp-for="Input.Email" class="form-label">Username</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="user-box">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" required="true">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox text-white">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <button class="ButtonLog" id="login-submit" type="submit">
                <a>
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    Submit
                </a>
            </button>

            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </p>

        </form>
    </div>
</div>



