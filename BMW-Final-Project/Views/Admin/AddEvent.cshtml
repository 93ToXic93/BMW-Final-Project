@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BMW_Final_Project.Engine.Models.Event.AddEventModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <form asp-controller="Admin" asp-action="AddEvent" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h1 class="display-4 fw-bold text-center p-3">Добавяне на събитие</h1>
                <div class="form-group p-3">
                    <label asp-for="@Model.Name" class="form-label-add-edit fw-bold">Име</label>
                    <input asp-for="@Model.Name" class="form-control border-2 border-dark fw-bold" aria-required="true" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="form-group p-3">
                    <label asp-for="@Model.Description" class="fw-bold">Описание</label>
                    <input asp-for="@Model.Description" class="form-control fw-bold border-2 border-dark" />
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>

                <div class="form-group p-3">
                    <label asp-for="@Model.StartEvent" class="fw-bold">Дата и час на започване</label>
                    <input asp-for="@Model.StartEvent" class="form-control fw-bold border-2 border-dark" />
                    <span asp-validation-for="@Model.StartEvent" class="text-danger"></span>
                </div>

                <div class="form-group p-3">
                    <label asp-for="@Model.EndEvent" class="fw-bold">Дата и час на закриване</label>
                    <input asp-for="@Model.EndEvent" class="form-control fw-bold border-2 border-dark" />
                    <span asp-validation-for="@Model.EndEvent" class="text-danger"></span>
                </div>

                <div class="form-group p-3">
                    <label asp-for="@Model.ImgUrl" class="fw-bold">Снимка-URL</label>
                    <input asp-for="@Model.ImgUrl" class="form-control fw-bold border-2 border-dark" />
                    <span asp-validation-for="@Model.ImgUrl" class="text-danger"></span>
                </div>


                <div class="form-group p-3">
                    <label asp-for="@Model.PlaceOfTheEvent" class="fw-bold">Местоположение на събитието</label>
                    <input asp-for="@Model.PlaceOfTheEvent" class="form-control fw-bold border-2 border-dark" />
                    <span asp-validation-for="@Model.PlaceOfTheEvent" class="text-danger"></span>
                </div>

                <div class="p-4">
                    <input class="Add-Button-Submit" type="submit" value="Submit" />
                </div>

            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

