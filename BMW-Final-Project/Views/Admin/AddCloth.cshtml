@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BMW_Final_Project.Engine.Models.Cloth.AddClothModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <form asp-controller="Admin" asp-action="AddCloth" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h1 class="display-4 fw-bold text-center p-3">Добавяне на облекло</h1>
                <div class="form-group p-3">
                    <label asp-for="@Model.Name" class="form-label-add-edit fw-bold">Име</label>
                    <input asp-for="@Model.Name" class="form-control border-2 border-dark fw-bold" aria-required="true" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="form-group p-3">
                    <label asp-for="@Model.TypePersonId" class="fw-bold">Tип-облекло</label>
                    <select asp-for="@Model.TypePersonId" class="form-control border-2 fw-bold border-dark">
                        <option value="">Изберете тип облекло</option>
                        @foreach (var typePerson in Model.TypePersonModels)
                        {
                            <option value="@typePerson.Id">@typePerson.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.TypePersonId" class="text-danger"></span>
                </div>
                <div class="form-group p-3">
                    <label asp-for="@Model.ClothCollectionId" class="fw-bold">Колекция</label>
                    <select id="colorDropdown" asp-for="@Model.ClothCollectionId" class="form-control fw-bold border-2 border-dark">
                        <option value="">Изберете колекция</option>
                        @foreach (var clothCollection in Model.ClothCollectionModels)
                        {
                            <option value="@clothCollection.Id">@clothCollection.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.ClothCollectionId" class="text-danger"></span>
                </div>

                <div class="form-group p-3">
                    <label asp-for="@Model.Description" class="fw-bold">Описание</label>
                    <input asp-for="@Model.Description" class="form-control fw-bold border-2 border-dark" />
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>

                <div class="form-group p-3">
                    <label asp-for="@Model.Amount" class="fw-bold">Количество</label>
                    <input asp-for="@Model.Amount" class="form-control fw-bold border-2 border-dark" />
                    <span asp-validation-for="@Model.Amount" class="text-danger"></span>
                </div>

                <div class="form-group p-3">
                    <label asp-for="@Model.ImgUrl" class="fw-bold">Снимка-URL</label>
                    <input asp-for="@Model.ImgUrl" class="form-control fw-bold border-2 border-dark" />
                    <span asp-validation-for="@Model.ImgUrl" class="text-danger"></span>
                </div>

                <div class="form-group p-3">
                    <label asp-for="@Model.SizeId" class="fw-bold">Размер на облеклото</label>
                    <select asp-for="@Model.SizeId" class="form-control fw-bold border-2 border-dark">
                        <option value="">Изберете размер</option>
                        @foreach (var sizeModel in Model.SizeModels)
                        {
                            <option value="@sizeModel.Id">@sizeModel.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.SizeId" class="text-danger"></span>
                </div>

                <div class="form-group p-3">
                    <label asp-for="@Model.Price" class="fw-bold">Цена</label>
                    <input asp-for="@Model.Price" class="form-control fw-bold border-2 border-dark" />
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>

                <div class="p-4">
                    <input class="Add-Button-Submit" type="submit" value="Submit" />
                </div>

            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}